{
  "compilerOptions": {
    /* 基本选项 */
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"],

    /* Vue 与 JSX/TSX 支持 */
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* 输出控制 */
    "sourceMap": true,
    "noEmit": true,

    /* 路径别名 */
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },

    /* JSON 模块支持与隔离模块 */
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Vue 特有配置 */
    "types": ["vite/client"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
